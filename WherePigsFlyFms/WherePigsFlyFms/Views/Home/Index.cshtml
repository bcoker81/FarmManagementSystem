@model WherePigsFlyFms.ViewModels.FarmViewModel

@Styles.Render("~/Content/css")
@Styles.Render("~/Content/toastr")
@Styles.Render("~/bundles/modernizr")

<head>
    <link rel="stylesheet" type="text/css" href="http://cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css">
    <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" charset="utf8" src="http://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
</head>

<body>

    <script>
        $(function () {
            $("#animalTable").DataTable();
        })
    </script>
    <br /><br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                @Html.Partial("_menu")
            </div>
            <div class="col-md-10">
                <br /><br />
                <div class="panel panel">
                    <div class="panel-heading" style="background-color: #3c3c3c">
                        <h3 style="text-align:left; color:antiquewhite;">Manage Animals</h3>
                    </div>
                    <div class="panel-body">
                        <a href="myModal" data-toggle="modal" data-target="#myModal"><input type="button" value="Register New Animal" /></a>
                        <br />
                        <br />
                        <table id="animalTable" class="table table-striped table-condensed table-hover table-responsive">
                            <thead>
                                <tr>
                                    <th style="text-align:center;">Medical Records</th>
                                    <th>Tag #</th>
                                    <th>@Html.DisplayNameFor(Model => Model.Animals[0].Name)</th>
                                    <th>@Html.DisplayNameFor(Model => Model.Animals[0].Breed)</th>
                                    <th>@Html.DisplayNameFor(Model => Model.Animals[0].Gender)</th>
                                    <th>@Html.DisplayNameFor(Model => Model.Animals[0].DateAcquired)</th>
                                    <th>@Html.DisplayNameFor(Model => Model.Animals[0].AnimalType)</th>
                                 <th></th><th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Animals)
                                {
                                    <tr>
                                        <td style="text-align:center;"><span class="badge">@Html.DisplayFor(modelItem => item.MedicalCount)</span></td>
                                        <td><strong>@Html.ActionLink(item.TagNumber, "ViewAnimalDetails", new { Id = item.Id })</strong> </td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Breed)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DateAcquired)</td>
                                        <td>@Html.DisplayFor(modelItem => item.AnimalTypeText)</td>
                                        <td style="text-align:center;">
                                            <a href="@Url.Action("UpdateAnimalDetails", "Home", new { id = item.Id })"><input type="button" value="Modify" /></a>
                                        </td>
                                        <td><a href="@Url.Action("ViewAnimalDetails","Home", new { Id=item.Id })"><input type="button" value="Details" /></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <link href="http://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

                        @section scripts{
                            <script src="http://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

                            <script>
                                $(document).ready(function () {
                                    $('animalTable').DataTable();
                                });
                            </script>
                        }
                    </div>
                    <div class="panel-footer" style="background-color: #3c3c3c">
                        <a href="myModal" data-toggle="modal" data-target="#myModal"><input type="button" value="Register New Animal" /></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#3c3c3c">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color:antiquewhite;">REGISTER NEW ANIMAL</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("_RegisterAnimal", Model)
            </div>
        </div>
    </div>
</div>

<div id="menu1" class="panel panel-default">
</div>
<div id="deleteModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">DELETE ANIMAL @Html.DisplayFor(Model => Model.Animal.Name)</h4>
            </div>
            <div class="modal-body">
                @* @Html.Partial("_Delete", Model)*@
            </div>
        </div>
    </div>
</div>




