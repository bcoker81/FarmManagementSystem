@model WherePigsFlyFms.ViewModels.FarmViewModel

<br />
@Html.HiddenFor(model => model.Animal.Id)
<div class="panel panel">
    <div class="panel-heading" style="background-color:#3c3c3c"><h3 style="text-align:center; color:antiquewhite;">Medical History</h3></div>
    <div class="panel-body">
        <br />
        <a href="myModal" data-toggle="modal" data-target="#myModal"><input type="button"value="Add Vaccine" /></a>
        <br />
        <br />
        <table class="table table-striped table-condensed table-hover table-bordered">
            <tr>
                <th>Vaccine Date</th>
                <th>Type</th>
                <th>Notes</th>
            </tr>
            @foreach (var item in Model.Vaccines)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.VaccineDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.VaccineName)</td>
                    <td>@Html.DisplayFor(modelItem => item.VaccineNotes)</td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer" style="background-color:#3c3c3c">

    </div>
</div>


<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#3c3c3c">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title" style="color:antiquewhite;">Register new medical record</h3>
            </div>
            <div class="modal-body">
                @Html.Partial("_NewMedicalHistory", Model)
            </div>
        </div>
    </div>
</div>
